		<param name="list_id"/>
		<param name="include_animation">true</param>
		<param name="content"/>
		<definition>
			<control type="group">
				<include condition="$PARAM[include_animation]">common_window_animation</include>
				<animation effect="slide" time="101" end="0,144" condition="ControlGroup(9000).HasFocus()">Conditional</animation>
				<!-- Background fade /-->
				<control type="image">
					<visible>ControlGroup(9000).HasFocus() | Control.HasFocus(9001)</visible>
					<animation type="Visible">
						<effect type="fade" start="0" end="100" time="101"/>
					</animation>
					<animation type="Hidden">
						<effect type="fade" start="100" end="0" time="101"/>
					</animation>
					<width>1920</width>
					<height>1080</height>
					<texture colordiffuse="80ffffff">colors/black.png</texture>
				</control>
				<!-- Background panel /-->
				<control type="image">
					<top>-144</top>
					<width>1920</width>
					<height>209</height>
					<texture colordiffuse="main700">miscellaneous/panel.png</texture>
				</control>
				<control type="image">
					<left>915</left>
					<width>89</width>
					<height>55</height>
					<texture colordiffuse="main500">icons/settings.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<!-- Settings list /-->
				<control type="grouplist" id="9000">
					<top>-117</top>
					<width>1920</width>
					<height>89</height>
					<orientation>horizontal</orientation>
					<itemgap>21</itemgap>
					<align>center</align>
					<ondown>$PARAM[list_id]</ondown>
					<onback>$PARAM[list_id]</onback>
					<include>$PARAM[content]</include>
				</control>
			</control>
		</definition>
	</include>

