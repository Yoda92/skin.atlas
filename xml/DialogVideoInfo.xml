<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">100</defaultcontrol>
	<controls>
		<include>default_background</include>
		<include>clock</include>
		<control type="group">
			<include>common_window_animation</include>
			<!-- Dialog items /-->
			<control type="group">
				<include>default_fanart</include>
				<include content="specific_header_label">
					<param name="label">$INFO[ListItem.Title]</param>
				</include>
				<!-- Meta information /-->
				<control type="group">
					<top>165</top>
					<left>589</left>
					<!-- Panel background /-->
					<control type="image">
						<height>444</height>
						<width>1276</width>
						<texture border="5" colordiffuse="accent800">shapes/white_rounded.png</texture>
					</control>
					<!-- Metadata /-->
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<usecontrolcoords>true</usecontrolcoords>
						<top>465</top>
						<!-- Director /-->
						<control type="label">
							<visible>!String.IsEmpty(ListItem.Director) | !String.IsEmpty(ListItem.Writer)</visible>
							<height>26</height>
							<width>auto</width>
							<label>[B]$LOCALIZE[31067]:[/B] $VAR[director_var]    •   </label>
						</control>
						<!-- Duration /-->
						<control type="label">
							<visible>!String.IsEmpty(ListItem.Duration)</visible>
							<height>26</height>
							<width>auto</width>
							<label>[B]$LOCALIZE[31068]:[/B] $INFO[ListItem.Duration] $LOCALIZE[31070]   •   </label>
						</control>
						<!-- Year /-->
						<control type="label">
							<visible>!String.IsEmpty(ListItem.Year)</visible>
							<height>26</height>
							<width>auto</width>
							<label>[B]$LOCALIZE[31069]:[/B] $INFO[ListItem.Year]   •   </label>
						</control>
						<!-- Rating /-->
						<control type="image">
							<visible>!String.IsEmpty(ListItem.Rating)</visible>
							<height>26</height>
							<width>130</width>
							<texture>$VAR[star_var]</texture>
						</control>
						<!-- Rating /-->
						<control type="label">
							<visible>!String.IsEmpty(ListItem.Rating)</visible>
							<height>26</height>
							<width>auto</width>
							<label>  $INFO[ListItem.Rating]</label>
						</control>
					</control>
					<!-- Plot /-->
					<control type="textbox">
						<top>499</top>
						<visible>!String.IsEmpty(ListItem.Plot)</visible>
						<height>96</height>
						<width>1276</width>
						<label>[COLOR text100][B]$LOCALIZE[31071]:[/B][/COLOR] $VAR[plot_var]</label>
					</control>
					<!-- No actors avaible /-->
					<control type="group">
						<visible>!Integer.IsGreater(Container(50).NumItems,0)</visible>
						<control type="image">
							<aspectratio>center</aspectratio>
							<height>444</height>
							<width>1276</width>
							<texture colordiffuse="accent300">icons/hidden.png</texture>
						</control>
						<control type="label">
							<top>300</top>
							<height>26</height>
							<textcolor>text300</textcolor>
							<label>$LOCALIZE[31072]</label>
							<width>1276</width>
							<align>center</align>
						</control>
					</control>
					<!-- Actors /-->
					<control type="panel" id="50">
						<ondown>100</ondown>
						<orientation>horizontal</orientation>
						<width>1276</width>
						<height>419</height>
						<top>21</top>
						<itemlayout width="251" height="330">
							<control type="group">
								<left>21</left>
								<include content="common_poster">
									<param name="width">240</param>
									<param name="height">355</param>
									<param name="bordersize">5</param>
									<param name="bordertexture">shadows/shadow_5px.png</param>
								</include>
								<control type="group">
									<top>355</top>
									<control type="label">
										<width>230</width>
										<align>center</align>
										<height>26</height>
										<label>$INFO[ListItem.Label]</label>
									</control>
									<control type="label">
										<top>26</top>
										<width>230</width>
										<align>center</align>
										<height>26</height>
										<label>$INFO[ListItem.Label2]</label>
										<font>sourcesanspro_regular_21</font>
										<textcolor>text300</textcolor>
									</control>
								</control>
							</control>
						</itemlayout>
						<focusedlayout width="251" height="330">
							<control type="group">
								<left>21</left>
								<control type="image">
									<top>-5</top>
									<left>-5</left>
									<bordersize>5</bordersize>
									<bordertexture border="5">shadows/shadow_5px_rounded.png</bordertexture>
									<height>365</height>
									<width>250</width>
									<texture border="5" colordiffuse="accent100">shapes/white_rounded.png</texture>
								</control>
								<include content="common_poster">
									<param name="width">240</param>
									<param name="height">355</param>
									<param name="bordersize">5</param>
									<param name="bordertexture">shadows/shadow_5px.png</param>
								</include>
								<control type="group">
									<top>355</top>
									<control type="label">
										<width>230</width>
										<align>center</align>
										<height>26</height>
										<label>$INFO[ListItem.Label]</label>
									</control>
									<control type="label">
										<top>26</top>
										<width>230</width>
										<align>center</align>
										<height>26</height>
										<label>$INFO[ListItem.Label2]</label>
										<font>sourcesanspro_regular_21</font>
										<textcolor>text300</textcolor>
									</control>
								</control>
							</control>
						</focusedlayout>
					</control>
				</control>
			</control>
			<!-- Large thumb /-->
			<control type="image" id="3">
				<top>145</top>
				<left>35</left>
				<height>790</height>
				<width>540</width>
				<fadetime>200</fadetime>
				<aspectratio>scale</aspectratio>
				<bordersize>20</bordersize>
				<bordertexture border="20">shadows/shadow_20px.png</bordertexture>
			</control>
			<!-- Dialog actions /-->
			<control type="grouplist" id="100">
				<onup>50</onup>
				<orientation>horizontal</orientation>
				<top>826</top>
				<left>589</left>
				<itemgap>21</itemgap>
				<!-- Play /-->
				<include content="dialog_button">
					<param name="height">89</param>
					<param name="width">233</param>
					<param name="id">8</param>
					<param name="label">$LOCALIZE[31073]</param>
				</include>
				<!-- Refresh /-->
				<include content="dialog_button">
					<param name="height">89</param>
					<param name="width">233</param>
					<param name="id">6</param>
					<param name="label">$LOCALIZE[31074]</param>
				</include>
				<!-- Trailer /-->
				<include content="dialog_button">
					<param name="visible">!String.IsEmpty(ListItem.Trailer)</param>
					<param name="height">89</param>
					<param name="width">233</param>
					<param name="id">11</param>
					<param name="label">$LOCALIZE[31075]</param>
				</include>
				<!-- Choose Art /-->
				<include content="dialog_button">
					<param name="height">89</param>
					<param name="width">233</param>
					<param name="id">10</param>
					<param name="label">$LOCALIZE[31076]</param>
				</include>
				<!-- Director Filmography /-->
				<include content="dialog_button">
					<param name="height">89</param>
					<param name="width">233</param>
					<param name="id">13</param>
					<param name="label">$LOCALIZE[31077]</param>
				</include>
			</control>
		</control>
	</controls>
</window>
