<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="view_55_panel">
		<control type="group">
			<include>window_zoom_animation</include>
			<include>view_zoom_animation</include>
			<visible>Control.IsVisible(55)</visible>
			<!-- Panel /-->
			<control type="panel" id="55">
				<orientation>horizontal</orientation>
				<preloaditems>2</preloaditems>
				<pagecontrol>9001</pagecontrol>
				<viewtype label="Panel">wide</viewtype>
				<onup>9000</onup>
				<ondown>9001</ondown>
				<visible>Container.Content(genres)</visible>
				<top>263</top>
				<width>1920</width>
				<itemlayout height="282" width="282" condition="String.IsEqual(DBtype,genres)">
					<control type="group">
						<top>16</top>
						<left>16</left>
						<control type="image">
							<width>266</width>
							<height>266</height>
							<bordersize>5</bordersize>
							<bordertexture border="5">shadows/shadow_5px.png</bordertexture>
							<texture colordiffuse="accent850" border="5">shapes/white_rounded.png</texture>
						</control>	
						<control type="image">
							<top>75</top>
							<left>75</left>
							<width>116</width>
							<height>116</height>
							<aspectratio>scale</aspectratio>
							<texture colordiffuse="text100" fallback="icons/genre.png">$VAR[genre_image_var]</texture>
						</control>
						<control type="label">
							<height>25</height>
							<width>214</width>
							<left>26</left>
							<top>215</top>
							<label>$INFO[ListItem.Label]</label>
							<align>center</align>
							<textcolor>text100</textcolor>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="282" width="282" condition="String.IsEqual(DBtype,genres)">
					<control type="group">
						<animation type="Focus">
							<effect type="zoom" start="100" end="103" time="89" center="auto"/>
						</animation>
						<animation type="UnFocus">
							<effect type="zoom" start="103" end="100" time="89" center="auto"/>
						</animation>
						<control type="image">
							<top>16</top>
							<left>16</left>
							<animation type="Focus">
								<effect type="fade" start="0" end="100" time="89"/>
							</animation>
							<animation type="UnFocus">
								<effect type="fade" start="100" end="0" time="89"/>
							</animation>
							<width>266</width>
							<height>266</height>
							<texture colordiffuse="text100" border="15">shapes/white_rounded_semi.png</texture>
						</control>
						<control type="group">
							<top>16</top>
							<left>16</left>
							<control type="image">
								<width>266</width>
								<height>266</height>
								<bordersize>5</bordersize>
								<bordertexture border="5">shadows/shadow_5px.png</bordertexture>
								<texture colordiffuse="accent850" border="5">shapes/white_rounded.png</texture>
							</control>						
							<control type="image">
								<top>75</top>
								<left>75</left>
								<width>116</width>
								<height>116</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="text100" fallback="icons/genre.png">$VAR[genre_image_var]</texture>
							</control>
							<control type="label">
								<height>25</height>
								<width>214</width>
								<left>26</left>
								<top>215</top>
								<label>$INFO[ListItem.Label]</label>
								<align>center</align>
								<textcolor>text100</textcolor>
							</control>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>
