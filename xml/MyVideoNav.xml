<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<backgroundcolor>0</backgroundcolor>
	<views>51,50</views>
	<controls>
		<include>default_background</include>
		<include>clock</include>
		<control type="group">
			<include>common_window_animation</include>
			<include>default_fanart</include>
			<include>default_header_label</include>
			<include>view_50_list</include>
			<include>view_51_poster</include>
		</control>
		<!-- Options panel /-->
		<include content="common_options_menu">
			<param name="list_id">50</param>
			<param name="content">myvideonav_options_content</param>
		</include>
		<!-- Scrollbar /-->
		<control type="scrollbar" id="9001">
			<include>common_window_animation</include>
			<visible>Control.IsVisible(51)</visible>
			<showonepage>false</showonepage>
			<onup>51</onup>
			<orientation>horizontal</orientation>
			<bottom>0</bottom>
			<height>13</height>
			<width>1920</width>
			<texturesliderbar border="5" colordiffuse="accent300">shapes/white_rounded.png</texturesliderbar>
			<texturesliderbarfocus border="5" colordiffuse="main500">shapes/white_rounded.png</texturesliderbarfocus>
		</control>
		<control type="scrollbar" id="9001">
			<include>common_window_animation</include>
			<visible>Control.IsVisible(50)</visible>
			<showonepage>false</showonepage>
			<onleft>50</onleft>
			<orientation>vertical</orientation>
			<right>0</right>
			<width>13</width>
			<height>1080</height>
			<texturesliderbar border="5" colordiffuse="accent300">shapes/white_rounded.png</texturesliderbar>
			<texturesliderbarfocus border="5" colordiffuse="main500">shapes/white_rounded.png</texturesliderbarfocus>
		</control>
	</controls>
</window>
