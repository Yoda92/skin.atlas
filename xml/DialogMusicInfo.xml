<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">100</defaultcontrol>
	<controls>
		<control type="group">
			<include>common_window_animation</include>
			<!-- Dialog items /-->
			<control type="group">
				<include>default_background</include>
				<include>clock</include>
				<include content="default_header_label">
					<param name="label">$VAR[list_label_var]</param>
					<param name="container_id">100</param>
				</include>
				<!-- Meta information /-->
				<control type="group">
					<top>165</top>
					<left>590</left>
					<!-- Panel background /-->
					<control type="image">
						<height>750</height>
						<width>1276</width>
						<texture border="5" colordiffuse="text800">shapes/white_rounded.png</texture>
					</control>
					<!-- Metadata /-->
					<control type="grouplist">
						<left>21</left>
						<top>21</top>
						<orientation>vertical</orientation>
						<itemgap>8</itemgap>
						<!-- Artist /-->
						<control type="label">
							<visible>!String.IsEmpty(ListItem.Artist)</visible>
							<font>medium_header</font>
							<height>42</height>
							<width>auto</width>
							<label>$INFO[ListItem.Artist]</label>
						</control>
						<!-- Album /-->
						<control type="label">
							<visible>!String.IsEmpty(ListItem.Album)</visible>
							<textcolor>text200</textcolor>
							<height>26</height>
							<width>auto</width>
							<label>$INFO[ListItem.Album]</label>
						</control>
						<!-- Year /-->
						<control type="label">
							<visible>!String.IsEmpty(ListItem.Year)</visible>
							<textcolor>text200</textcolor>
							<height>26</height>
							<width>auto</width>
							<label>$INFO[ListItem.Year]</label>
						</control>
						<!-- Song /-->
						<control type="label">
							<visible>!String.IsEmpty(ListItem.Title)</visible>
							<height>26</height>
							<width>auto</width>
							<label>$INFO[ListItem.Title]</label>
						</control>
					</control>
				</control>
			</control>
			<!-- Large thumb /-->
			<control type="group">
				<top>145</top>
				<left>35</left>
				<include content="common_poster">
					<param name="width">540</param>
					<param name="height">790</param>
					<param name="fadetime">200</param>
					<param name="bordersize">20</param>
					<param name="bordertexture">shadows/shadow_20px.png</param>
					<param name="aspectratio">keep</param>
				</include>
			</control>
			<!-- Dialog actions /-->
			<control type="grouplist" id="100">
				<onup>50</onup>
				<orientation>horizontal</orientation>
				<top>805</top>
				<left>610</left>
				<itemgap>21</itemgap>
				<!-- Refresh /-->
				<include content="dialog_button">
					<param name="height">89</param>
					<param name="width">230</param>
					<param name="id">6</param>
					<param name="label">$LOCALIZE[31056]</param>
					<param name="texturecolor">main900</param>
					<param name="disabledcolor">text900</param>
				</include>
				<!-- Connect to Last.fm /-->
				<include content="dialog_button">
					<param name="height">89</param>
					<param name="width">230</param>
					<param name="id">11</param>
					<param name="label">Last.fm</param>
					<param name="texturecolor">main900</param>
					<param name="disabledcolor">text900</param>
				</include>
				<!-- Art /-->
				<include content="dialog_button">
					<param name="height">89</param>
					<param name="width">230</param>
					<param name="id">10</param>
					<param name="label">$LOCALIZE[31057]</param>
					<param name="texturecolor">main900</param>
					<param name="disabledcolor">text900</param>
				</include>
			</control>
		</control>
	</controls>
</window>
