<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="view_51_poster">
		<control type="group">
			<include>window_zoom_animation</include>
			<include>view_zoom_animation</include>
			<visible>Control.IsVisible(51)</visible>
			<include>default_fanart</include>
			<!-- Background panel /-->
			<control type="image">
				<top>354</top>
				<width>1920</width>
				<height>372</height>
				<texture colordiffuse="main1000">colors/white.png</texture>
			</control>
			<!-- Shadow /-->
			<control type="image">
				<top>349</top>
				<height>5</height>
				<width>1920</width>
				<texture colordiffuse="main300" flipy="true">shadows/shadowline_5px_down.png</texture>
			</control>
			<control type="image">
				<top>726</top>
				<height>5</height>
				<width>1920</width>
				<texture colordiffuse="main300">shadows/shadowline_5px_down.png</texture>
			</control>
			<!-- Posterview /-->
			<control type="fixedlist" id="51">
				<preloaditems>2</preloaditems>
				<pagecontrol>9001</pagecontrol>
				<viewtype label="Poster">icon</viewtype>
				<onup>9000</onup>
				<ondown>9001</ondown>
				<visible>Container.Content(movies) | Container.Content(seasons) | Container.Content(sets) | Container.Content(tvshows)</visible>
				<width>1920</width>
				<top>370</top>
				<itemlayout width="241">
					<control type="group">
						<left>16</left>
						<include content="common_poster">
							<param name="width">230</param>
							<param name="height">340</param>
							<param name="fadetime">200</param>
							<param name="bordersize">5</param>
							<param name="bordertexture">shadows/shadow_5px.png</param>
						</include>
					</control>
				</itemlayout>
				<focusedlayout width="503">
					<!-- Two focus items for smooth left and right transition /-->
					<control type="group">
						<visible>Container.OnScrollPrevious</visible>
						<animation effect="fade" start="100" end="0" time="400">Hidden</animation>
						<left>16</left>
						<include content="common_poster">
							<param name="width">230</param>
							<param name="height">340</param>
							<param name="bordersize">5</param>
							<param name="bordertexture">shadows/shadow_5px.png</param>
						</include>
					</control>
					<control type="group">
						<visible>Container.OnScrollNext</visible>
						<animation effect="fade" start="100" end="0" time="400">Hidden</animation>
						<left>278</left>
						<include content="common_poster">
							<param name="width">230</param>
							<param name="height">340</param>
							<param name="bordersize">5</param>
							<param name="bordertexture">shadows/shadow_5px.png</param>
						</include>
					</control>
				</focusedlayout>
			</control>
			<!-- Large poster /-->
			<control type="group">
				<left>262</left>
				<top>264</top>
				<control type="image">
					<top>-20</top>
					<left>-20</left>
					<width>522</width>
					<height>763</height>
					<texture>colors/black.png</texture>
					<bordersize>20</bordersize>
					<bordertexture border="20">shadows/shadow_20px.png</bordertexture>
				</control>
				<control type="group">
					<include content="common_poster">
						<param name="width">482</param>
						<param name="height">723</param>
						<param name="fadetime">400</param>
					</include>
				</control>
			</control>
			<!-- Current item metadata /-->
			<control type="grouplist">
				<itemgap>11</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<top>726</top>
				<left>770</left>
				<!-- Title /-->
				<control type="label">
					<visible>!String.IsEmpty(ListItem.Title) + !ListItem.IsParentFolder</visible>
					<top>21</top>
					<height>55</height>
					<width>1129</width>
					<label>$VAR[list_label_var]</label>
					<font>common_header</font>
				</control>
				<!-- Genre /-->
				<control type="label">
					<visible>!String.IsEmpty(ListItem.Genre)</visible>
					<height>26</height>
					<width>1129</width>
					<label>$INFO[ListItem.Genre]</label>
					<textcolor>text150</textcolor>
					<font>common_light</font>
				</control>
				<!-- Rating /-->
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<height>25</height>
					<width>1129</width>
					<itemgap>11</itemgap>
					<control type="image">
						<visible>!ListItem.IsParentFolder</visible>
						<height>25</height>
						<width>130</width>
						<texture colordiffuse="selected500">$VAR[star_var]</texture>
					</control>
					<!-- Rating /-->
					<control type="label">
						<visible>!String.IsEmpty(ListItem.Rating)</visible>
						<height>25</height>
						<width>auto</width>
						<label>$INFO[ListItem.Rating]</label>
						<textcolor>text200</textcolor>
						<font>common_light</font>
					</control>
					<!-- Duration/-->
					<control type="label">
						<visible>!String.IsEmpty(ListItem.Duration)</visible>
						<height>25</height>
						<width>auto</width>
						<label>[COLOR text100]•[/COLOR]  $INFO[ListItem.Duration(mins)] $LOCALIZE[31070]</label>
						<textcolor>text200</textcolor>
						<font>common_light</font>
					</control>
					<!-- Duration/-->
					<control type="label">
						<visible>!String.IsEmpty(ListItem.Year)</visible>
						<height>25</height>
						<width>auto</width>
						<label>[COLOR text100]•[/COLOR]  $INFO[ListItem.Year]</label>
						<textcolor>text200</textcolor>
						<font>common_light</font>
					</control>
				</control>
				<!-- Plot /-->
				<control type="textbox">
					<visible>!String.IsEmpty(ListItem.Plot)</visible>
					<height>98</height>
					<width>1129</width>
					<label>$VAR[plot_var]</label>
				</control>
			</control>
		</control>
	</include>
</includes>
