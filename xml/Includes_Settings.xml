	<include name="common_settings_spincontrolex_footer">
		<param name="id"/>
		<definition>
			<control type="spincontrolex" id="$PARAM[id]">
				<pulseonselect>false</pulseonselect>
				<aligny>center</aligny>
				<textcolor>text100</textcolor>
				<disabledcolor>text500</disabledcolor>
				<font>sourcesanspro_regular_26</font>
				<width>973</width>
				<height>131</height>
				<align>left</align>
				<textoffsetx>42</textoffsetx>
				<textwidth>931</textwidth>
				<texturefocus border="26" colordiffuse="main500">shapes/white_rounded_bar.png</texturefocus>
				<textureup colordiffuse="text300">buttons/toggle_up.png</textureup>
				<textureupfocus colordiffuse="text100">buttons/toggle_up.png</textureupfocus>
				<textureupdisabled colordiffuse="text500">buttons/toggle_up.png</textureupdisabled>
				<texturedown colordiffuse="text300">buttons/toggle_down.png</texturedown>
				<texturedownfocus colordiffuse="text100">buttons/toggle_down.png</texturedownfocus>
				<texturedowndisabled colordiffuse="text500">buttons/toggle_down.png</texturedowndisabled>
				<spinheight>34</spinheight>
				<spinwidth>34</spinwidth>
			</control>
		</definition>
	</include>

	<include name="common_settings_label_footer">
		<param name="id"/>
		<definition>
			<control type="label" id="$PARAM[id]">
				<width>973</width>
				<height>131</height>
				<align>center</align>
				<font>sourcesanspro_bold_26</font>
			</control>
		</definition>
	</include>
	<include name="common_settings_textbox_footer">
