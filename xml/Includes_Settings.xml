				<height>131</height>
				<align>left</align>
				<textoffsetx>42</textoffsetx>
				<textwidth>648</textwidth>
				<texturefocus border="26" colordiffuse="main500">shapes/white_rounded_bar.png</texturefocus>
			</control>
		</definition>
	</include>

	<include name="common_settings_radiobutton_footer">
		<param name="id"/>
		<param name="label"/>
