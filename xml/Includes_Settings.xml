	<include name="description_item">
		<param name="id"/>
		<param name="label"/>
		<definition>
			<control type="textbox">
				<animation type="Hidden">
					<effect type="fade" start="100" end="0" time="300" tween="cubic" easing="out"/>
				</animation>
				<animation type="Visible">
					<effect type="fade" start="0" end="100" time="300" tween="cubic" easing="out" delay="300"/>
				</animation>
				<visible>Container(10).HasFocus($PARAM[id])</visible>
				<align>center</align>
				<label>$PARAM[label]</label>
				<textcolor>text150</textcolor>
				<font>common_text_3</font>
			</control>	
		</definition>
	</include>

