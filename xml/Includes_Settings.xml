			<control type="radiobutton" id="$PARAM[id]">
				<textcolor>text100</textcolor>
				<label>$PARAM[label]</label>
				<width>973</width>
				<height>131</height>
				<align>left</align>
				<textoffsetx>42</textoffsetx>
				<textwidth>931</textwidth>
				<texturefocus border="26" colordiffuse="main500">shapes/white_rounded_bar.png</texturefocus>
				<radiowidth>89</radiowidth>
				<radioheight>89</radioheight>
				<radioposx>863</radioposx>
