<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="common_settings_button_header">
		<param name="id"/>
		<param name="label"/>
		<param name="onclick"/>
		<definition>
			<control type="button" id="$PARAM[id]">
				<textcolor>text100</textcolor>
				<onclick>$PARAM[onclick]</onclick>
				<label>$PARAM[label]</label>
				<width>598</width>
				<height>131</height>
				<texturefocus border="26" colordiffuse="main500">shapes/white_rounded_bar.png</texturefocus>
				<font>sourcesanspro_bold_26</font>
				<align>left</align>
				<textoffsetx>42</textoffsetx>
			</control>
		</definition>
	</include>

	<include name="common_settings_button_footer">
		<param name="id"/>
		<param name="label"/>
		<param name="onclick"/>
