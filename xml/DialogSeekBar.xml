<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Player.Caching] | Player.Forwarding | Player.Rewinding | Player.ShowInfo | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(playerprocessinfo) | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput)</visible>
	<visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
	<defaultcontrol>10</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<controls>
		<!-- Top panel /-->
		<control type="group">
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="0,-79" time="144" delay="144" tween="cubic" easing="out"/>
				<effect type="fade" start="100" end="0" time="144" delay="144" tween="cubic" easing="out"/>
			</animation>
			<animation type="WindowOpen">
				<effect type="slide" start="0,-79" end="0,0" time="144" tween="cubic" easing="out"/>
				<effect type="fade" start="0" end="100" time="144" tween="cubic" easing="out"/>
			</animation>
			<!-- Background panel /-->
			<control type="image">
				<height>79</height>
				<width>1920</width>
				<texture colordiffuse="secondary300">colors/black.png</texture>
			</control>
			<control type="image">
				<top>79</top>
				<width>100%</width>
				<height>5</height>
				<texture colordiffuse="secondary300">shadows/shadowline_5px_down.png</texture>
			</control>
			<control type="label">
				<left>55</left>
				<height>79</height>
				<font>mediumsmall_header</font>
				<label>$VAR[OSD_label_var]</label>
			</control>
			<control type="grouplist">
				<orientation>vertical</orientation>
				<right>55</right>
				<height>79</height>
				<align>center</align>
				<!-- Time /-->
				<control type="label">
					<align>right</align>
					<height>25</height>
					<label>$INFO[System.Time(hh:mm)]</label>
					<font>small_header</font>
				</control>
				<!-- Date /-->
				<control type="label">
					<align>right</align>
					<height>25</height>
					<textcolor>text300</textcolor>
					<label>$LOCALIZE[31061]: $INFO[Player.FinishTime]</label>
				</control>
			</control>
		</control>
		<!-- Bottom panel /-->
		<control type="group">
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="0,128" time="144" delay="144" tween="cubic" easing="out"/>
				<effect type="fade" start="100" end="0" time="144" delay="144" tween="cubic" easing="out"/>
			</animation>
			<animation type="WindowOpen">
				<effect type="slide" start="0,128" end="0,0" time="144" tween="cubic" easing="out"/>
				<effect type="fade" start="0" end="100" time="144" tween="cubic" easing="out"/>
			</animation>
			<!-- Background panel /-->
			<control type="image">
				<bottom>0</bottom>
				<height>128</height>
				<width>1920</width>
				<texture colordiffuse="secondary300">colors/black.png</texture>
			</control>
			<control type="image">
				<bottom>128</bottom>
				<width>100%</width>
				<height>5</height>
				<texture flipy="true" colordiffuse="secondary300">shadows/shadowline_5px_down.png</texture>
			</control>
			<!-- Video time /-->
			<control type="label">
				<bottom>0</bottom>
				<width>1920</width>
				<height>107</height>
				<align>center</align>
				<font>small_header</font>
				<label>$INFO[Player.Time(hh:mm:ss)] / $INFO[Player.Duration(hh:mm:ss)]</label>
			</control>
			<control type="label">
				<bottom>162</bottom>
				<left>55</left>
				<width>1920</width>
				<height>35</height>
				<font>small_header</font>
				<label>$INFO[Player.SeekStepSize]</label>
				<shadowcolor>text700</shadowcolor>
			</control>
			<control type="progress" id="13">
				<bottom>107</bottom>
				<height>21</height>
				<width>1920</width>
				<texturebg colordiffuse="text700">colors/white.png</texturebg>
				<midtexture colordiffuse="red500">colors/white.png</midtexture>
				<info>Player.Progress</info>
			</control>
			<control type="slider">
				<ondown>10</ondown>
				<orientation>horizontal</orientation>
				<bottom>100</bottom>
				<height>35</height>
				<width>1920</width>
				<texturesliderbar colordiffuse="00ffffff">osd/seeker.png</texturesliderbar>
				<textureslidernib colordiffuse="$VAR[osd_nib_var]">osd/seeker.png</textureslidernib>
				<info>Player.Progress</info>
			</control>
		</control>
	</controls>
</window>
