<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include file="Includes_Animations.xml"/>
	<include file="Custom_Configure_Menu.xml"/>
	<include file="Custom_Subtitles_Dialog.xml"/>
	<include file="Custom_OSD_Settings_Dialog.xml"/>
	<include file="Custom_NowPlayingOverlay.xml"/>
	<include file="Custom_Hub_Movies"/>
	<include file="Variables.xml"/>
	<include file="VideoOSD.xml"/>
	<include file="Includes_Media_Flags.xml"/>
	<include file="Includes_Dialogs.xml"/>
	<include file="Includes_DialogSelect.xml"/>
	<include file="Includes_Settings.xml"/>
	<include file="Includes_Options.xml"/>
	<include file="Includes_Home.xml"/>
	<include file="Includes_OSD.xml"/>
	<include file="Includes_Weather.xml"/>
	<include file="View_50_Widelist.xml"/>
	<include file="View_51_Poster.xml"/>
	<include file="View_52_Fanart.xml"/>
	<include file="View_53_List.xml"/>
	<include file="View_54_Episode_Vertical.xml"/>
	<include file="View_55_Panel.xml"/>
	<include file="PVR_Channels.xml"/>
	<include file="PVR_Guide.xml"/>
	<include file="Defaults.xml"/>
	<include file="script-skinshortcuts-includes.xml"/>

	<include name="default_background">
		<control type="image">
			<width>100%</width>
			<height>100%</height>
			<texture colordiffuse="blue1000">colors/white.png</texture>
		</control>
		<include condition="!Skin.HasSetting(disableNoise)">noise</include>
	</include>

	<include name="noise">
		<control type="image">
			<width>100%</width>
			<height>100%</height>
			<texture>miscellaneous/noise.png</texture>
		</control>
	</include>

	<include name="default_fanart">
		<include condition="!Skin.HasSetting(disableFanart)">fanart</include>
	</include>

	<include name="fanart">
		<control type="image">
			<include>common_window_animation</include>
			<fadetime>300</fadetime>
			<width>100%</width>
			<height>100%</height>
			<texture colordiffuse="0Bffffff">$INFO[ListItem.Art(fanart)]</texture>
		</control>
	</include>

	<include name="clock">
		<control type="group">
			<!-- Time /-->
			<control type="label">
				<bottom>55</bottom>
				<left>55</left>
				<height>55</height>
				<label>$INFO[System.Time(hh:mm)]</label>
				<font>medium_header</font>
			</control>
			<!-- Date /-->
			<control type="label">
				<font>medium_footer</font>
				<bottom>38</bottom>
				<left>55</left>
				<height>25</height>
				<textcolor>text200</textcolor>
				<label>$INFO[System.Date]</label>
			</control>
		</control>
	</include>

	<include name="common_poster">
		<param name="width"/>
		<param name="height"/>
		<param name="fadetime">0</param>
		<param name="texture_var">$VAR[common_poster_var]</param>
		<param name="aspectratio">scale</param>
		<param name="bordersize"/>
		<param name="bordertexture"/>
		<definition>
			<!-- Background /-->
			<control type="image">
				<texture>colors/black.png</texture>
				<height>$PARAM[height]</height>
				<width>$PARAM[width]</width>
				<fadetime>$PARAM[fadetime]</fadetime>
				<bordersize>$PARAM[bordersize]</bordersize>
				<bordertexture border="$PARAM[bordersize]">$PARAM[bordertexture]</bordertexture>
			</control>
			<!-- Poster /-->
			<control type="image">
				<fadetime>$PARAM[fadetime]</fadetime>
				<texture fallback="DefaultFolder.png">$PARAM[texture_var]</texture>
				<height>$PARAM[height]</height>
				<width>$PARAM[width]</width>
				<aspectratio>$PARAM[aspectratio]</aspectratio>
				<bordersize>$PARAM[bordersize]</bordersize>
			</control>
			<!-- Progress indicator /-->
			<control type="image">
				<fadetime>$PARAM[fadetime]</fadetime>
				<width>$PARAM[width]</width>
				<height>89</height>
				<aspectratio align="right">center</aspectratio>
				<top>-8</top>
				<left>8</left>
				<texture colordiffuse="text100">$VAR[list_right_image_var]</texture>
			</control>
		</definition>
	</include>

	<include name="default_header_label">
		<param name="label">$VAR[default_header_var]</param>
		<param name="container_id">50</param>
		<param name="width">1810</param>
		<definition>
			<control type="group">
				<top>24</top>
				<!-- header label /-->
				<control type="label" id="$PARAM[id]">
					<width>$PARAM[width]</width>
					<left>55</left>
					<height>55</height>
					<label>$PARAM[label]</label>
					<font>medium_header</font>
				</control>
				<control type="label">
					<font>medium_footer</font>
					<visible>!String.IsEmpty(Container($PARAM[container_id]).CurrentItem)</visible>
					<width>$PARAM[width]</width>
					<top>48</top>
					<left>55</left>
					<height>25</height>
					<textcolor>text200</textcolor>
					<label>$LOCALIZE[31161]: [COLOR text100]$INFO[Container($PARAM[container_id]).CurrentItem][/COLOR] | [COLOR text300]$INFO[Container($PARAM[container_id]).NumItems][/COLOR]</label>
				</control>
			</control>
		</definition>
	</include>

	<include name="common_vertical_scrollbar">
		<param name="id">9001</param>
		<param name="view_id"/>
		<param name="height">1080</param>
		<definition>
			<control type="scrollbar" id="$PARAM[id]">
				<include>common_window_animation</include>
				<visible>Control.IsVisible($PARAM[view_id])</visible>
				<onleft>$PARAM[view_id]</onleft>
				<orientation>vertical</orientation>
				<right>0</right>
				<width>13</width>
				<height>$PARAM[height]</height>
			</control>
		</definition>
	</include>

	<include name="common_horizontal_scrollbar">
		<param name="id">9001</param>
		<param name="view_id"/>
		<definition>
			<control type="scrollbar" id="$PARAM[id]">
				<include>common_window_animation</include>
				<visible>Control.IsVisible($PARAM[view_id])</visible>
				<onup>$PARAM[view_id]</onup>
				<orientation>horizontal</orientation>
				<bottom>0</bottom>
				<width>1920</width>
				<height>13</height>
			</control>
		</definition>
	</include>
</includes>
