<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include file="Includes_Animations.xml"/>
	<include file="Custom_Configure_Menu.xml"/>
	<include file="Custom_Hub_1101.xml"/>
	<include file="Custom_Hub_1102.xml"/>
	<include file="Custom_Hub_1103.xml"/>
	<include file="Custom_Subtitles_Dialog.xml"/>
	<include file="Custom_OSD_Settings_Dialog.xml"/>
	<include file="Custom_NowPlayingOverlay.xml"/>
	<include file="Variables.xml"/>
	<include file="VideoOSD.xml"/>
	<include file="Includes_Views.xml"/>
	<include file="Includes_Dialogs.xml"/>
	<include file="Includes_DialogSelect.xml"/>
	<include file="Includes_Settings.xml"/>
	<include file="Includes_Options.xml"/>
	<include file="Includes_Home.xml"/>
	<include file="Includes_OSD.xml"/>
	<include file="Includes_Weather.xml"/>
	<include file="View_50_List.xml"/>
	<include file="View_51_Poster.xml"/>
	<include file="PVR_Channels.xml"/>
	<include file="PVR_Guide.xml"/>
	<include file="Defaults.xml"/>
	<include file="script-skinshortcuts-includes.xml"/>

	<include name="default_background">
		<control type="image">
			<width>100%</width>
			<height>100%</height>
			<texture>miscellaneous/default_background.png</texture>
		</control>
	</include>

	<include name="default_fanart">
		<control type="image">
			<fadetime tween="sine">400</fadetime>
			<width>100%</width>
			<height>100%</height>
			<texture colordiffuse="1Affffff">$INFO[ListItem.Art(fanart)]</texture>
		</control>
	</include>

	<include name="clock">
		<control type="group">
			<!-- No animation unless previous- or next window is home. /-->
			<animation type="WindowOpen" condition="Window.Previous(home)">
				<effect type="fade" start="0" end="100" time="144" tween="quadratic" easing="out"/>
			</animation>
			<animation type="WindowClose" condition="Window.Next(home)">
				<effect type="fade" start="100" end="0" time="144" tween="quadratic" easing="out"/>
			</animation>
			<!-- Time /-->
			<control type="label">
				<bottom>55</bottom>
				<left>55</left>
				<height>55</height>
				<label>$INFO[System.Time(hh:mm)]</label>
				<font>sourcesanspro_bold_42</font>
			</control>
			<!-- Date /-->
			<control type="label">
				<bottom>24</bottom>
				<left>55</left>
				<height>55</height>
				<textcolor>text300</textcolor>
				<label>$INFO[System.Date]</label>
			</control>
		</control>
	</include>

	<include name="common_poster">
		<param name="width"/>
		<param name="height"/>
		<param name="fadetime">0</param>
		<param name="texture_var">$VAR[common_poster_var]</param>
		<param name="aspectratio">scale</param>
		<param name="bordersize"/>
		<param name="bordertexture"/>
		<definition>
			<!-- Background /-->
			<control type="image">
				<texture>colors/black.png</texture>
				<height>$PARAM[height]</height>
				<width>$PARAM[width]</width>
				<fadetime>$PARAM[fadetime]</fadetime>
				<bordersize>$PARAM[bordersize]</bordersize>
				<bordertexture border="$PARAM[bordersize]">$PARAM[bordertexture]</bordertexture>
			</control>
			<!-- Poster /-->
			<control type="image">
				<fadetime>$PARAM[fadetime]</fadetime>
				<texture fallback="DefaultFolder.png">$PARAM[texture_var]</texture>
				<height>$PARAM[height]</height>
				<width>$PARAM[width]</width>
				<aspectratio>$PARAM[aspectratio]</aspectratio>
				<bordersize>$PARAM[bordersize]</bordersize>
			</control>
			<!-- Progress indicator /-->
			<control type="image">
				<fadetime>$PARAM[fadetime]</fadetime>
				<width>$PARAM[width]</width>
				<height>89</height>
				<aspectratio align="right">center</aspectratio>
				<top>-8</top>
				<left>8</left>
				<texture colordiffuse="text100">$VAR[progress_var]</texture>
			</control>
		</definition>
	</include>

	<include name="default_header_label">
		<control type="group">
			<top>55</top>
			<!-- header label /-->
			<control type="label">
				<left>55</left>
				<height>55</height>
				<label>$VAR[default_header_var]</label>
				<font>raleway_bold_42</font>
			</control>
			<!-- Item counter /-->
			<control type="label">
				<visible>!String.IsEmpty(Container().NumItems) + !String.IsEmpty(Container().CurrentItem)</visible>
				<right>55</right>
				<align>right</align>
				<height>55</height>
				<label>$INFO[Container().CurrentItem] | [COLOR text300]$INFO[Container.NumItems][/COLOR]</label>
				<font>sourcesanspro_bold_42</font>
			</control>
		</control>
	</include>

	<include name="specific_header_label">
		<param name="label"/>
		<param name="id"/>
		<definition>
			<control type="group">
				<top>55</top>
				<!-- Header label /-->
				<control type="label" id="$PARAM[id]">
					<left>55</left>
					<height>55</height>
					<label>$PARAM[label]</label>
					<font>raleway_bold_42</font>
				</control>
				<!-- Item counter /-->
				<control type="label">
					<visible>!String.IsEmpty(Container().NumItems) + !String.IsEmpty(Container().CurrentItem)</visible>
					<right>55</right>
					<align>right</align>
					<height>55</height>
					<label>$INFO[Container().CurrentItem] | [COLOR text300]$INFO[Container.NumItems][/COLOR]</label>
					<font>sourcesanspro_bold_42</font>
				</control>
			</control>
		</definition>
	</include>

	<include name="common_scrollbar">
		<param name="id"/>
		<param name="view_id"/>
		<definition>
			<control type="scrollbar" id="$PARAM[id]">
				<include>common_window_animation</include>
				<visible>Control.IsVisible($PARAM[view_id])</visible>
				<onleft>$PARAM[view_id]</onleft>
				<orientation>vertical</orientation>
				<right>0</right>
				<width>13</width>
				<height>1080</height>
			</control>
		</definition>
	</include>
</includes>
