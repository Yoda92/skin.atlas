<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<backgroundcolor>0</backgroundcolor>
	<views>50</views>
	<controls>
		<include>default_background</include>
		<control type="group">
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0,0" end="455,0" tween="sine" time="233"/>
			</animation>
			<include>default_fanart</include>
			<include>view_50_list</include>
		</control>
		<!-- Header + Clock /-->
		<control type="group">
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0,0" end="455,0" tween="sine" time="233"/>
			</animation>
			<visible>Control.IsVisible(50)</visible>
			<include>delayed_zoom_animation</include>
			<include>view_zoom_animation</include>
			<include content="default_header_label">
				<param name="container_id">50</param>
				<param name="width">623</param>
			</include>
			<include>clock</include>	
		</control>
		<!-- Options panel /-->
		<include content="common_options_menu">
			<param name="list_id">50</param>
			<param name="content">mygames_options_content</param>
		</include>
		<!-- Scrollbar /-->
		<control type="group">
			<include>common_window_animation</include>
			<include content="common_vertical_scrollbar">
				<param name="view_id">50</param>
			</include>
		</control>
	</controls>
</window>
