<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">100</defaultcontrol>
	<controls>
		<control type="group">
			<include>common_window_animation</include>
			<!-- Dialog items /-->
			<control type="group">
				<include>default_background</include>
				<include>clock</include>
				<include content="specific_header_label">
					<param name="label">$INFO[ListItem.Label]</param>
				</include>
				<!-- Meta information /-->
				<control type="group">
					<top>165</top>
					<left>589</left>
					<!-- Metadata /-->
					<control type="list" id="5">
						<orientation>vertical</orientation>
						<itemlayout height="34" width="1167">
							<control type="label">
								<label>[B]$INFO[ListItem.Label]:[/B] [COLOR text300]$INFO[ListItem.Label2][/COLOR]</label>
							</control>
						</itemlayout>
						<focusedlayout height="34" width="1167">
							<control type="label">
								<label>[B]$INFO[ListItem.Label]:[/B] [COLOR text300]$INFO[ListItem.Label2][/COLOR]</label>
							</control>
						</focusedlayout>
					</control>
				</control>
			</control>
			<!-- Large thumb /-->
			<control type="group">
				<top>145</top>
				<left>35</left>
				<include content="common_poster">
					<param name="width">540</param>
					<param name="height">790</param>
					<param name="fadetime">200</param>
					<param name="bordersize">20</param>
					<param name="bordertexture">shadows/shadow_20px.png</param>
					<param name="aspectratio">keep</param>
				</include>
			</control>
		</control>
	</controls>
</window>
