<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="view_background_panel">
		<param name="header_width"/>
		<param name="footer_left"/>
		<param name="footer_width"/>
		<definition>
			<control type="group">
				<control type="image">
					<top>159</top>
					<left>159</left>
					<width>$PARAM[header_width]</width>
					<height>764</height>
					<texture border="5" colordiffuse="accent800">shapes/white_rounded.png</texture>
					<bordersize>5</bordersize>
					<bordertexture border="5">shadows/shadow_5px.png</bordertexture>
				</control>
				<control type="image">
					<top>159</top>
					<left>$PARAM[footer_left]</left>
					<width>$PARAM[footer_width]</width>
					<height>764</height>
					<texture border="5" colordiffuse="accent800">shapes/white_rounded.png</texture>
					<bordersize>5</bordersize>
					<bordertexture border="5">shadows/shadow_5px.png</bordertexture>
				</control>
			</control>
		</definition>
	</include>

	<include name="view_list_overlay">
		<param name="left"/>
		<param name="width"/>
		<definition>
			<control type="group">
				<control type="image">
					<top>164</top>
					<left>$PARAM[left]</left>
					<width>$PARAM[width]</width>
					<height>21</height>
					<texture>shadows/list_overlay.png</texture>
				</control>
				<control type="image">
					<top>897</top>
					<left>$PARAM[left]</left>
					<width>$PARAM[width]</width>
					<height>21</height>
					<texture flipy="true">shadows/list_overlay.png</texture>
				</control>
			</control>
		</definition>
	</include>

	<include name="icon_view_panel">
		<control type="image">
			<top>384</top>
			<height>312</height>
			<width>100%</width>
			<texture colordiffuse="accent800">colors/white.png</texture>
		</control>
		<control type="image">
			<top>379</top>
			<height>5</height>
			<width>1920</width>
			<texture flipy="true">shadows/shadowline_5px_down.png</texture>
		</control>
		<control type="image">
			<top>696</top>
			<height>5</height>
			<width>1920</width>
			<texture>shadows/shadowline_5px_down.png</texture>
		</control>
	</include>

	<include name="icon_view_list">
		<param name="id"/>
		<param name="content"/>
		<definition>
			<!-- Icon list /-->
			<control type="list" id="$PARAM[id]">
				<orientation>horizontal</orientation>
				<top>400</top>
				<itemlayout width="291">
					<!-- To accommodate the focus texture, the poster is <top>5</top> /-->
					<control type="group">
						<left>21</left>
						<top>5</top>
						<control type="image">
							<top>-5</top>
							<left>-5</left>
							<height>280</height>
							<width>280</width>
							<texture border="5" colordiffuse="main500">shapes/white_rounded.png</texture>
							<bordersize>5</bordersize>
							<bordertexture border="5">shadows/shadow_5px.png</bordertexture>
						</control>
						<control type="image">
							<height>220</height>
							<width>270</width>
							<texture colordiffuse="accent100" fallback="DefaultFolder.png">$INFO[ListItem.Icon]</texture>
							<aspectratio>scale</aspectratio>
						</control>
						<!-- Textbox to avoid scrolling /-->
						<control type="textbox">
							<left>21</left>
							<top>181</top>
							<aligny>center</aligny>
							<align>center</align>
							<height>89</height>
							<width>228</width>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="291">
					<!-- To accommodate the focus texture, the poster is <top>5</top> /-->
					<control type="group">
						<left>16</left>
						<animation type="Focus">
							<effect type="zoom" start="100" end="103" time="89" center="145,145"/>
						</animation>
						<animation type="UnFocus">
							<effect type="zoom" start="103" end="100" time="89" center="145,145"/>
						</animation>
						<control type="image">
							<animation type="Focus">
								<effect type="fade" start="0" end="100" time="89"/>
							</animation>
							<animation type="UnFocus">
								<effect type="fade" start="100" end="0" time="89"/>
							</animation>
							<top>-5</top>
							<left>-5</left>
							<height>290</height>
							<width>290</width>
							<texture border="10" colordiffuse="accent100">shapes/white_rounded_hole.png</texture>
							<bordersize>5</bordersize>
							<bordertexture border="5">shadows/shadow_5px.png</bordertexture>
						</control>
						<control type="image">
							<top>5</top>
							<left>5</left>
							<height>270</height>
							<width>270</width>
							<texture border="5" colordiffuse="main500">shapes/white_rounded.png</texture>
						</control>
						<control type="group">
							<top>5</top>
							<left>5</left>
							<control type="image">
								<height>220</height>
								<width>270</width>
								<texture colordiffuse="accent100" fallback="DefaultFolder.png">$INFO[ListItem.Icon]</texture>
								<aspectratio>scale</aspectratio>
							</control>
							<!-- Textbox to avoid scrolling /-->
							<control type="textbox">
								<left>21</left>
								<top>181</top>
								<aligny>center</aligny>
								<align>center</align>
								<height>89</height>
								<width>228</width>
							</control>
						</control>
					</control>
				</focusedlayout>
				<content>
					<include>$PARAM[content]</include>
				</content>
			</control>
		</definition>
	</include>
</includes>
