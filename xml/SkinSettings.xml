<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<onunload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=1000&amp;group=mainmenu|powermenu)</onunload>
	<controls>
		<include>default_background</include>
		<control type="group">
			<include>common_window_animation</include>
			<include content="default_header_label">
				<param name="label">$LOCALIZE[31139]</param>
			</include>
			<include>clock</include>
			<include>common_settings_panel</include>
			<control type="grouplist" id="10">
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onright condition="ControlGroup(10).HasFocus(101)">11</onright>
				<onright condition="ControlGroup(10).HasFocus(102)">12</onright>
				<top>164</top>
				<left>164</left>
				<width>560</width>
				<height>752</height>
				<itemgap>-42</itemgap>
				<!-- Home -->
				<include content="skin_settings_button_header">
					<param name="id">101</param>
					<param name="footer_id">11</param>
					<param name="label">$LOCALIZE[31140]</param>
				</include>
				<!-- Background -->
				<include content="skin_settings_button_header">
					<param name="id">102</param>
					<param name="footer_id">12</param>
					<param name="label">$LOCALIZE[31197]</param>
				</include>
			</control>
			<control type="grouplist" id="11">
				<visible>ControlGroup(10).HasFocus(101)</visible>
				<onleft>10</onleft>
				<usecontrolcoords>true</usecontrolcoords>
				<itemgap>-42</itemgap>
				<top>164</top>
				<left>744</left>
				<width>1012</width>
				<height>752</height>
				<orientation>vertical</orientation>
				<!-- Configure main menu -->
				<include content="common_settings_button_footer">
					<param name="id">111</param>
					<param name="label">$LOCALIZE[31141]</param>
					<param name="onclick">RunScript(script.skinshortcuts,type=manage&amp;group=mainmenu)</param>
				</include>
				<!-- Submenu focus -->
				<include content="common_settings_radiobutton_footer">
					<param name="id">112</param>
					<param name="label">$LOCALIZE[31189] [COLOR text400][I]($LOCALIZE[31190])[/I][/COLOR]</param>
					<param name="onclick">Skin.ToggleSetting(toggleNoSubmenu)</param>
					<param name="selected">!Skin.HasSetting(toggleNoSubmenu)</param>
				</include>
				<!-- Widget type -->
				<control type="button" id="113">
					<onclick>$PARAM[onclick]</onclick>
					<label>$LOCALIZE[31196]</label>
					<label2>$VAR[widget_setting_var]</label2>
					<onclick condition="Skin.HasSetting(toggleMultiImageBackground)">Skin.ToggleSetting(toggleMultiImageBackground)</onclick>
					<onclick condition="Skin.HasSetting(toggleMultiImageBackground)">Skin.ToggleSetting(toggleHomeWidget)</onclick>
					<onclick condition="Skin.HasSetting(toggleHomeWidget)">Skin.ToggleSetting(toggleMultiImageBackground)</onclick>
					<onclick condition="Skin.HasSetting(toggleHomeWidget)">Skin.ToggleSetting(toggleHomeWidget)</onclick>
					<onclick condition="!Skin.HasSetting(toggleHomeWidget) + !Skin.HasSetting(toggleMultiImageBackground)">Skin.ToggleSetting(toggleMultiImageBackground)</onclick>
					<width>1012</width>
					<height>131</height>
					<align>left</align>
					<textoffsetx>42</textoffsetx>
					<textwidth>928</textwidth>
					<texturefocus border="26" colordiffuse="main500">shapes/white_rounded_bar_shadow.png</texturefocus>
				</control>
				<!-- Powermenu -->
				<include content="common_settings_button_footer">
					<param name="id">114</param>
					<param name="label">$LOCALIZE[31193]</param>
					<param name="onclick">RunScript(script.skinshortcuts,type=manage&amp;group=powermenu)</param>
				</include>
			</control>
			<control type="grouplist" id="12">
				<visible>ControlGroup(10).HasFocus(102)</visible>
				<onleft>10</onleft>
				<usecontrolcoords>true</usecontrolcoords>
				<itemgap>-42</itemgap>
				<top>164</top>
				<left>744</left>
				<width>1012</width>
				<height>752</height>
				<orientation>vertical</orientation>
				<!-- Enable noise -->
				<include content="common_settings_radiobutton_footer">
					<param name="id">121</param>
					<param name="label">$LOCALIZE[31198]</param>
					<param name="onclick">Skin.ToggleSetting(disableNoise)</param>
					<param name="selected">!Skin.HasSetting(disableNoise)</param>
				</include>
				<!-- Enable fanart in views -->
				<include content="common_settings_radiobutton_footer">
					<param name="id">122</param>
					<param name="label">$LOCALIZE[31199]</param>
					<param name="onclick">Skin.ToggleSetting(disableFanart)</param>
					<param name="selected">!Skin.HasSetting(disableFanart)</param>
				</include>
			</control>
		</control>
	</controls>
</window>
