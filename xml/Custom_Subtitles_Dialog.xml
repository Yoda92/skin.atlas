					<control type="button" id="101">
						<onclick>ActivateWindow(subtitlesearch)</onclick>
						<width>666</width>
						<height>73</height>
						<texturefocus border="5" colordiffuse="main500">shapes/white_rounded.png</texturefocus>
						<align>left</align>
						<textoffsetx>21</textoffsetx>
						<label>$LOCALIZE[31027]</label>
					</control>
					<!-- Enable /-->
					<control type="radiobutton" id="102">
						<onclick>ShowSubtitles</onclick>
						<selected>VideoPlayer.SubtitlesEnabled</selected>
						<enable>VideoPlayer.HasSubtitles</enable>
						<label>$LOCALIZE[31028]</label>
