						<height>73</height>
						<texturefocus border="5" colordiffuse="main500">shapes/white_rounded.png</texturefocus>
						<textoffsetx>21</textoffsetx>
						<align>left</align>
						<label>$LOCALIZE[31029]</label>
						<enable>VideoPlayer.HasSubtitles + VideoPlayer.SubtitlesEnabled</enable>
