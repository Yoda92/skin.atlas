	<controls>
		<control type="group">
			<include>common_window_animation</include>
			<include>dialog_background</include>
			<!-- Dialog items /-->
			<control type="group">
				<width>734</width>
				<height>449</height>
				<centertop>50%</centertop>
				<centerleft>50%</centerleft>
				<include content="dialog_panel">
					<param name="width">734</param>
					<param name="height">449</param>
					<param name="label_id"/>
					<param name="label">$LOCALIZE[31026]</param>
				</include>
				<!-- Buttons background panel /-->
				<control type="image">
					<left>34</left>
					<top>123</top>
					<width>666</width>
					<height>292</height>
					<texture border="5" colordiffuse="secondary700">shapes/white_rounded.png</texture>
				</control>
				<!-- List /-->
				<control type="grouplist" id="10">
					<left>34</left>
					<top>123</top>
