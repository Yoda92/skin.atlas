<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="default_menu">
		<!-- Dummy control to fix animations in main list /-->
		<control type="group" id="4000">
			<visible>Control.HasFocus(2000) | Control.HasFocus(3001)</visible>
			<animation type="Hidden">
				<effect type="fade" time="89" start="100" end="0"/>
			</animation>
		</control>
		<!-- Top panel /-->
		<control type="image">
			<height>131</height>
			<width>100%</width>
			<texture colordiffuse="accent800">colors/white.png</texture>
		</control>	
		<control type="image">
			<top>131</top>
			<width>100%</width>
			<height>10</height>
			<texture>shadows/shadowline_10px_down.png</texture>
		</control>
		<!-- Default list /-->
		<control type="list" id="1000">
			<preloaditems>2</preloaditems>
			<scrolltime tween="sine">300</scrolltime>
			<ondown condition="!Integer.IsGreater(Container(2000).NumItems,0)">3000</ondown>
			<ondown condition="Integer.IsGreater(Container(2000).NumItems,0)">2000</ondown>
			<orientation>horizontal</orientation>
			<width>100%</width>
			<height>131</height>
			<itemlayout width="240">
				<control type="label">
					<top>70</top>
					<width>240</width>
					<height>131</height>
					<label>$PARAM[label]</label>
					<font>raleway_regular_26</font>
					<textcolor>text300</textcolor>
					<align>center</align>
					<aligny>top</aligny>
				</control>
				<control type="image">
					<top>18</top>
					<width>240</width>
					<height>55</height>
					<texture colordiffuse="text300" fallback="DefaultFolder.png">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</itemlayout>
			<focusedlayout width="240">
				<control type="group">
					<animation type="Focus">
						<effect type="zoom" start="100" end="103" time="89" center="auto"/>
					</animation>
					<animation type="UnFocus">
						<effect type="zoom" start="103" end="100" time="89" center="auto"/>
					</animation>
					<control type="image">
						<animation type="Focus" condition="!Control.IsVisible(4000)">
							<effect type="fade" start="0" end="100" time="89"/>
						</animation>
						<animation type="UnFocus" condition="!Control.IsVisible(4000)">
							<effect type="fade" start="100" end="0" time="89"/>
						</animation>
						<texture border="5" colordiffuse="$VAR[home_color_var]">shapes/white_rounded.png</texture>
						<width>240</width>
						<height>131</height>
					</control>
					<control type="label">
						<top>70</top>
						<width>240</width>
						<height>131</height>
						<label>$PARAM[label]</label>
						<font>raleway_regular_26</font>
						<textcolor>text100</textcolor>
						<align>center</align>
						<aligny>top</aligny>
					</control>
					<control type="image">
						<top>18</top>
						<width>240</width>
						<height>55</height>
						<texture colordiffuse="text100" fallback="DefaultFolder.png">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</control>
			</focusedlayout>
			<!-- Default menu items /-->
			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>
		</control>
		<!-- Menu arrows /-->
		<include content="default_menu_arrow">
			<param name="left">0</param>
			<param name="flipx">true</param>
			<param name="visible">Container(1000).HasPrevious</param>
		</include>
		<include content="default_menu_arrow">
			<param name="left">1856</param>
			<param name="flipx">false</param>
			<param name="visible">Container(1000).HasNext</param>
		</include>
	</include>

	<include name="default_menu_arrow">
		<param name="left"/>
		<param name="flipx"/>
		<param name="visible"/>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<include>common_visible_animation</include>
				<top>0</top>
				<left>$PARAM[left]</left>
				<control type="image">
					<height>131</height>
					<width>64</width>
					<texture colordiffuse="40ffffff" flipx="$PARAM[flipx]">icons/arrow.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</control>
		</definition>
	</include>

	<include name="home_widget_panel">
		<control type="group">
			<top>131</top>
			<height>949</height>
			<width>1920</width>
			<!-- Widget panel /-->
			<control type="image">
				<right>0</right>
				<height>540</height>
				<width>100%</width>
				<texture colordiffuse="accent600">colors/white.png</texture>
			</control>
			<!-- Panel clock /-->
			<control type="label">
				<left>34</left>
				<top>480</top>
				<width>926</width>
				<height>26</height>
				<font>sourcesanspro_regular_26</font>
				<label>$INFO[System.Time]  [COLOR text100]•[/COLOR]  $INFO[System.Date]</label>
				<textcolor>text200</textcolor>
			</control>
			<!-- Widget metadata /-->
			<control type="group">
				<visible>Integer.IsGreater(Container(2000).NumItems,0)</visible>
				<left>34</left>
				<top>34</top>
				<control type="grouplist">
					<visible>Integer.IsGreater(Container(2000).NumItems,0)</visible>
					<orientation>vertical</orientation>
					<itemgap>15</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<width>926</width>
						<height>30</height>
						<font>raleway_bold_30</font>
						<label>$LOCALIZE[31088]:</label>
						<textcolor>yellow500</textcolor>
					</control>
					<control type="label">
						<visible>!String.IsEmpty(Container(2000).ListItem.Title)</visible>
						<width>926</width>
						<height>42</height>
						<font>raleway_bold_42</font>
						<label>$INFO[Container(2000).ListItem.Title]</label>
					</control>
					<!-- Genre /-->
					<control type="label">
						<visible>!String.IsEmpty(Container(2000).ListItem.Genre)</visible>
						<height>26</height>
						<width>1129</width>
						<label>$INFO[Container(2000).ListItem.Genre]</label>
						<textcolor>text200</textcolor>
						<font>sourcesanspro_regular_26</font>
					</control>
					<!-- Rating /-->
					<control type="image">
						<visible>!String.IsEmpty(Container(2000).ListItem.Rating) + !String.IsEmpty(Container(2000).ListItem.Duration) + !String.IsEmpty(Container(2000).ListItem.Year)</visible>
						<height>26</height>
						<width>130</width>
						<texture>$VAR[home_star_var]</texture>
					</control>
					<!-- Rating /-->
					<control type="label">
						<visible>!String.IsEmpty(Container(2000).ListItem.Rating) + !String.IsEmpty(Container(2000).ListItem.Duration) + !String.IsEmpty(Container(2000).ListItem.Year)</visible>
						<top>-38</top>
						<left>135</left>
						<height>26</height>
						<width>1129</width>
						<aligny>center</aligny>
						<label>$INFO[Container(2000).ListItem.Rating]  [COLOR grey100]•[/COLOR]  $INFO[Container(2000).ListItem.Duration] min  [COLOR grey100]•[/COLOR]  $INFO[Container(2000).ListItem.Year]</label>
						<textcolor>text200</textcolor>
					</control>
					<!-- Plot /-->
					<control type="textbox">
						<visible>!String.IsEmpty(Container(2000).ListItem.Plot)</visible>
						<height>98</height>
						<width>926</width>
						<label>$INFO[Container(2000).ListItem.Plot]</label>
					</control>
				</control>
			</control>
			<!-- Loading spinner /-->
			<control type="image">
				<include>common_visible_animation</include>
				<visible>Container(2000).IsUpdating + !Integer.IsGreater(Container(2000).NumItems,0)</visible>
				<animation effect="rotate" start="360" end="0" center="auto" time="720" loop="true" condition="true">Conditional</animation>
				<width>1920</width>
				<height>540</height>
				<texture colordiffuse="accent100">miscellaneous/spinner.png</texture>
				<aspectratio>center</aspectratio>
			</control>
			<!-- Widget fanart /-->
			<control type="image">
				<right>0</right>
				<height>540</height>
				<width>960</width>
				<texture diffuse="miscellaneous/home_diffuse.png">$INFO[container(2000).ListItem.Art(fanart)]</texture>
				<fadetime tween="sine">400</fadetime>
			</control>
			<!-- Empty library fallback /-->
			<include>home_widget_fallback</include>
			<!-- Panel shadow /-->
			<control type="image">
				<top>540</top>
				<height>10</height>
				<width>100%</width>
				<texture>shadows/shadowline_10px_down.png</texture>
			</control>
		</control>
	</include>

	<include name="home_widget_fallback">
		<control type="group">
			<top>-100</top>
			<visible>!Integer.IsGreater(Container(2000).NumItems,0)</visible>
			<control type="image">
				<aspectratio>center</aspectratio>
				<height>540</height>
				<width>1920</width>
				<texture colordiffuse="text300">icons/hidden.png</texture>
			</control>
			<control type="textbox">
				<left>480</left>
				<top>300</top>
				<height>200</height>
				<textcolor>text300</textcolor>
				<label>$LOCALIZE[31089]</label>
				<width>960</width>
				<align>center</align>
			</control>
			<control type="grouplist" id="3000">
				<onup>1000</onup>
				<align>center</align>
				<top>412</top>
				<width>1920</width>
				<height>89</height>
				<orientation>horizontal</orientation>
				<itemgap>21</itemgap>
				<control type="button" id="3001">
					<textcolor>text100</textcolor>
					<width>233</width>
					<height>89</height>
					<texturenofocus border="5" colordiffuse="accent700">shapes/white_rounded.png</texturenofocus>
					<texturefocus border="5" colordiffuse="accent500">shapes/white_rounded.png</texturefocus>
					<label>$LOCALIZE[31090]</label>
					<align>center</align>
					<aligny>center</aligny>
					<onclick>ActivateWindow(Videos,sources://video/,return)</onclick>
				</control>
			</control>
		</control>
	</include>

	<include name="home_widget">
		<!-- Widget/-->
		<control type="panel" id="2000">
			<preloaditems>2</preloaditems>
			<top>705</top>
			<onup>1000</onup>
			<onback>1000</onback>
			<height>340</height>
			<width>1920</width>
			<orientation>horizontal</orientation>
			<itemlayout width="254" height="340">
				<control type="group">
					<left>29</left>
					<include content="common_poster">
						<param name="width">230</param>
						<param name="height">340</param>
						<param name="fadetime">200</param>
						<param name="bordersize">5</param>
						<param name="bordertexture">shadows/shadow_5px.png</param>
						<param name="aspectratio">keep</param>
					</include>
				</control>
			</itemlayout>
			<focusedlayout width="254" height="340">
				<control type="group">
					<left>29</left>
					<animation type="Focus">
						<effect type="zoom" start="100" end="103" time="89" center="auto"/>
					</animation>
					<animation type="UnFocus">
						<effect type="zoom" start="103" end="100" time="89" center="auto"/>
					</animation>
					<control type="image">
						<animation type="Focus">
							<effect type="fade" start="0" end="100" time="89"/>
						</animation>
						<animation type="UnFocus">
							<effect type="fade" start="100" end="0" time="89"/>
						</animation>
						<width>230</width>
						<height>340</height>
						<texture border="5" colordiffuse="accent100">shapes/white_rounded.png</texture>
					</control>
					<control type="group">
						<include content="common_poster">
							<param name="width">230</param>
							<param name="height">340</param>
							<param name="bordersize">5</param>
							<param name="bordertexture">shadows/shadow_5px.png</param>
							<param name="aspectratio">keep</param>
						</include>
					</control>
				</control>
			</focusedlayout>
			<content target="videos" sortby="random" sortorder="ascending" limit="10">videodb://movies/titles/</content>
		</control>
	</include>
</includes>
